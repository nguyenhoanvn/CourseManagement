<Window x:Class="CourseManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseManagement"
        mc:Ignorable="d"
        Title="Course Schedule" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="80">
            <Button Name="btnSchedule" Content="Schedules" Width="80" Margin="5" Click="btnSchedule_Click"></Button>
            <Button Name="btnStudent" Content="Students" Width="80" Margin="5" Click="btnStudent_Click"></Button>
        </StackPanel>
    </Grid>
</Window>