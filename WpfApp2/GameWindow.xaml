<Window x:Class="WpfApp2.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="BombImage"
            Width="400">
            <Image.Source>
                <BitmapImage DecodePixelWidth="200"  
     UriSource="M:\bomb.png" />
            </Image.Source>
        </Image>
        <Image x:Name="DotImage"
                Width="300"
               Margin="142,42,358,158">
            <Image.Source>
                <BitmapImage DecodePixelWidth="200"  
                            UriSource="M:\dot.png" />
            </Image.Source>
        </Image>
        <Image x:Name="BombText"
               Margin="167,3,143,10"
               Visibility="Hidden">
            <Image.Source>
                <BitmapImage DecodePixelWidth="200"  
                            UriSource="M:\detonate.jpg" />
            </Image.Source>
        </Image>
    </Grid>
</Window>
